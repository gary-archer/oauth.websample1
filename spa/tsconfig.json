{
  "compilerOptions": {
    "strict": true,
    "target": "ES2017",
    "lib": ["ES2024", "DOM"],
    "module":"ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}